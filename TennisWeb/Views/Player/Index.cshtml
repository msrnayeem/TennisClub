@model List<TennisWeb.CF.PlayerInfo>

@{
    ViewBag.Title = "Player List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<head>
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css" />
<link rel="stylesheet" href="~/Assets/plugins/datatables-responsive/css/responsive.bootstrap4.css" />
</head>
<div class="container-fluid">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid my-2">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Players</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="" class="btn btn-primary">New Player</a>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Player List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="player_table" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Position</th>
                                    <td>Status</td>
                                    <td>Action</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var player in Model)
                                    {
                                        <tr>
                                            <td>@player.Id</td>
                                            <td>@player.Name</td>
                                            <td> @player.User.Email </td>
                                            <td>@player.PlayingPosition</td>
                                            <td>@player.User.Status</td>
                                            <td>Action</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="text-center">
                                        <td colspan="4">No Users Found</td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>

<script src="~/Assets/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script src="~/Assets/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>

<script>
    $(function () {
        $('#player_table').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "columnDefs": [
                { "orderable": true }
            ]
        });
    });
</script>