@model List<TennisWeb.CF.User>

@{
    ViewBag.Title = "Player List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<head>
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css" />
</head>
<div class="container-fluid">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid my-2">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Players</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="" class="btn btn-primary">New Player</a>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Player List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="player_table" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status(s)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Email</td>
                                            <td>@user.Role </td>
                                            <td>@user.Status</td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="text-center">
                                        <td colspan="3">No Users Found</td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>

<script src="~/Assets/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

<script>
    $(function () {
        $('#player_table').DataTable();
    });
</script>