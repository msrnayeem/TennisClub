@model List<TennisWeb.CF.Match>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css" />
</head>
<div class="container-fluid">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid my-2">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Matches</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="@Url.Action("Create", "Match")" class="btn btn-primary">New Match</a>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="row justify-content-center">
            @if (!string.IsNullOrEmpty(TempData["msg"] as string))
            {
                <div class="col-md-4 col-sm-12">
                    <div class="alert alert-success text-center">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        @TempData["msg"]
                    </div>
                </div>
            }
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Player List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="player_table" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var match in Model)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Index", "MatchPlayer", new { id = match.Id })">Details</a></td>

                                            <td>
                                                @(match.Status ? "Upcoming" : "Completed")
                                            </td>

                                            <td>@match.Time.ToString("dd MMMM, yyyy")</td>
                                            <td>@match.Slot.Start</td>
                                            <td>@match.Slot.End</td>
                                            <td>Action</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="text-center">
                                        <td colspan="6">No matches Found</td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>

<script src="~/Assets/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

<script>
    $(function () {
        $('#player_table').DataTable();
    });
</script>

