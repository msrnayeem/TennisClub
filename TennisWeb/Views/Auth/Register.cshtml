@model TennisWeb.CF.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>User Registration</h2>
            @using (Html.BeginForm("Store", "Auth", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                    <div class="invalid-feedback">Please enter a name.</div>
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Password)
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "text", required = "required" })
                    <div class="invalid-feedback">Please enter a start time.</div>
                </div>

                

                <button type="submit" class="btn btn-primary">Register</button>
            }
        </div>
    </div>
</div>

<script>
    // Example of form validation using Bootstrap's native validation classes
    (function () {
        'use strict';

        var forms = document.querySelectorAll('.needs-validation');

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
    })();
</script>



