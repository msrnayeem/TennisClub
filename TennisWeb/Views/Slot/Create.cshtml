@model TennisWeb.CF.Slot

@{
    ViewBag.Title = "New Slot";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2>Create Slot</h2>
            @using (Html.BeginForm("Store", "Slot", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                    <div class="invalid-feedback">Please enter a name.</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Start)
                    @Html.TextBoxFor(model => model.Start, new { @class = "form-control", type = "time", required = "required" })
                    <div class="invalid-feedback">Please enter a start time.</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.End)
                    @Html.TextBoxFor(model => model.End, new { @class = "form-control", type = "time", required = "required" })
                    <div class="invalid-feedback">Please enter an end time.</div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            }
            </div>
        </div>
    
    </div>


        <script>
            // Example of form validation using Bootstrap's native validation classes
            (function () {
                'use strict';

                var forms = document.querySelectorAll('.needs-validation');

                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault();
                                event.stopPropagation();
                            }

                            form.classList.add('was-validated');
                        }, false);
                    });
            })();
        </script>


